
<%= simple_form_for(country, html: { multipart: true }) do |f| %>
  <div class="row g-5">
    <div class="col-md-6">
      <%= f.input :name, input_html: { class: "form-control", placeholder: "Country name" }%>
    </div>
    <div class="col-md-6">
      <%= f.input :capital_city, input_html: { class: "form-control", placeholder: "Capital city" }%>
    </div>
    <div class="col-md-6">
      <%= f.input :price, input_html: { class: "form-control", placeholder: "Price per night" } %>
    </div>
    <div class="col-md-6">
      <%= f.input :main_language, input_html: { class: "form-control", placeholder: "Main language spoken" }%>
    </div>
  </div>
  <div class="bottominfo">
    <%= f.input :tag_line, input_html: { class: "form-control", placeholder: "Drive more rentals with a catching tag line" }%>
    <%= f.input :description, input_html: { class: "form-control", placeholder: "What makes your country great?" }%>
  </div>


<div data-controller="photo-preview" class="photoupload">
  <%= f.label :photos %>
  <%= f.file_field :photos,
    multiple: true,
    direct_upload: true,
    accept: 'image/*',
    data: {
      action: 'change->photo-preview#preview',
      direct_upload_url: rails_direct_uploads_url,
      photo_preview_target: "input" 
    },
    class: 'form-control' %>


  <div data-photo-preview-target="preview" style="margin-top: 10px;"></div>


  <button type="button"
    data-photo-preview-target="removeButton"
    data-action="click->photo-preview#remove"
    style="display: none; margin-top: 10px;">
    Remove photo
  </button>
</div>



  <div class="row align-items-center text-center">
    <div class="col text-start">
      <%= link_to "Cancel", countries_path %>
    </div>
    <div class="col">
      <%= f.submit "Done", class: "btn btn-outline-primary" %>
    </div>
    <div class="col"><!-- empty --></div>
  </div>
<% end %>
